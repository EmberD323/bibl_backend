generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id          Int      @id @default(autoincrement())
  first_name  String
  last_name   String
  username    String   @unique
  password    String
  lists       List[]
  ratings     Rating[]
}
model Book {
  id            Int      @id @default(autoincrement())
  title         String
  author_name   String
  imageURL      String
  category      String
  description   String
  pageCount     Int
  publishDate   String
  lists         BooksOnLists[]
  ratings       Rating[]
}

model List {
  id          Int      @id @default(autoincrement())
  name        String
  user        User   @relation(fields: [userId], references: [id])
  userId      Int    
  books BooksOnLists[]
}
model BooksOnLists {
  assignedAt DateTime @default(now())
  book       Book     @relation(fields: [bookId], references: [id])
  bookId     Int // relation scalar field (used in the `@relation` attribute above)
  list   List @relation(fields: [listId], references: [id])
  listId Int // relation scalar field (used in the `@relation` attribute above)

  @@id([bookId, listId])
}

model Rating {
  id          Int      @id @default(autoincrement())
  assignedAt DateTime @default(now())
  rating      Int
  user        User    @relation(fields: [userId], references: [id])
  userId      Int     
  book       Book     @relation(fields: [bookId], references: [id])
  bookId     Int 
}
